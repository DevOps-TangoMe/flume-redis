<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.tango.logstash.flume</groupId>
		<artifactId>flume-redis</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<groupId>com.tango.logstash.flume.redis</groupId>
	<artifactId>flume-redis-dist</artifactId>
	<packaging>pom</packaging>
	<name>Flume Redis Source/Sink Distribution</name>

	<properties>
		<rpm.root.dir>/usr/lib/flume-ng/plugins.d/tango-flume-redis</rpm.root.dir>
	</properties>


	<dependencies>
		<dependency>
			<groupId>com.tango.logstash.flume.redis</groupId>
			<artifactId>flume-redis-source</artifactId>
		</dependency>
		<dependency>
			<groupId>com.tango.logstash.flume.redis</groupId>
			<artifactId>flume-redis-sink</artifactId>
		</dependency>
	</dependencies>

	<build>
		<finalName>flume-redis-${project.version}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${maven.assembly.version}</version>

				<configuration>
					<descriptors>
						<descriptor>src/main/assembly/flume-redis.xml</descriptor>
					</descriptors>
				</configuration>

				<executions>
					<execution>
						<id>create-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>${maven.rpm.version}</version>
				<executions>
					<execution>
						<id>generate-rpm</id>
						<goals>
							<goal>rpm</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<name>tango-flume-redis</name>
					<copyright>2013, Tango</copyright>
					<distribution>Tango</distribution>
					<group>Development/Libraries</group>
					<packager>Tango</packager>
					<defineStatements>
						<defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
					</defineStatements>
					<requires>
						<require>flume-ng &gt; 1.5.0+cdh5.1.0+10</require>
					</requires>
					<mappings>
						<mapping>
							<directory>${rpm.root.dir}</directory>
						</mapping>
						<!-- Main artefacts go in <plugin_base_dir>/lib -->
						<mapping>
							<directory>${rpm.root.dir}/lib</directory>
							<dependency>
								<includes>
									<include>com.tango.logstash.flume.redis:flume-redis-source</include>
									<include>com.tango.logstash.flume.redis:flume-redis-sink</include>
									<include>com.tango.logstash.flume.redis:flume-redis-core</include>
								</includes>
							</dependency>
							<username>flume</username>
							<groupname>flume</groupname>
						</mapping>
						<!-- Dependencies go in <plugin_base_dir>/libext -->
						<mapping>
							<directory>${rpm.root.dir}/libext</directory>
							<dependency>
								<excludes>
									<exclude>com.tango.logstash.flume.redis:flume-redis-source</exclude>
									<exclude>com.tango.logstash.flume.redis:flume-redis-sink</exclude>
									<exclude>com.tango.logstash.flume.redis:flume-redis-core</exclude>
								</excludes>
							</dependency>
							<username>flume</username>
							<groupname>flume</groupname>
						</mapping>
					</mappings>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
